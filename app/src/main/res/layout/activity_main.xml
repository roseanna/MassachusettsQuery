<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roseanna.massachusettsinfo.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:gravity="center_horizontal"
        android:text="Info about Massachusetts" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="gone"

        android:theme="@android:style/Widget.ProgressBar.Inverse"
        style="@style/Widget.AppCompat.ProgressBar" />


    <Button
        android:id="@+id/popIncrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City with Largest Decrease %"/>

    <Button
        android:id="@+id/popDecrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City with Most Increase %"/>

    <Button
        android:id="@+id/popLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cities with less than 5000 in 2010"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TableLayout>
    </ScrollView>

</LinearLayout>
